<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HabitActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_baseline_save_24"
            android:id="@+id/save" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/design_default_color_secondary"
            app:tint="@color/design_default_color_on_secondary"
            app:rippleColor="@color/design_default_color_secondary_variant"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_layout"
            style="@style/Theme.HabitTracker.TitleEditText"
            android:hint="@string/name"
            app:placeholderText="Что это за привычка?"
            app:layout_constraintStart_toEndOf="@+id/back" android:layout_marginStart="-12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" android:id="@+id/name"
                android:paddingTop="4dp"/>

    </com.google.android.material.textfield.TextInputLayout>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_outline_arrow_back_24"
            android:src="@drawable/ic_outline_arrow_back_24"
            android:id="@+id/back"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="Back"
            app:layout_constraintBottom_toBottomOf="@+id/name_layout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <ScrollView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/name_layout">

        <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".HabitActivity">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_outline_event_repeat_24"
                    android:src="@drawable/ic_outline_event_repeat_24"
                    android:id="@+id/freq_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/freq_layout"
                    app:layout_constraintBottom_toBottomOf="@+id/freq_layout"
                    android:contentDescription="Habit frequency"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/freq_layout" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="36dp" style="@style/Theme.HabitTracker.TitleEditText"
                    android:hint="@string/frequency" app:placeholderText="Как часто вы это делаете?"
                    app:layout_constraintStart_toEndOf="@+id/freq_icon"
                    app:layout_constraintTop_toBottomOf="@+id/name_layout">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/frequency"
                        android:paddingTop="4dp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_outline_looks_24"
                    android:id="@+id/priority_icon"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/priority"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/priority_text"/>
            <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/priority"
                    app:layout_constraintStart_toEndOf="@+id/priority_icon"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginEnd="36dp"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintTop_toBottomOf="@+id/priority_text"/>
            <TextView
                    android:text="Приоритет"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/priority_text"
                    app:layout_constraintStart_toEndOf="@+id/priority_icon" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/freq_layout"
                    style="@style/TextAppearance.Material3.BodySmall"/>
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/type_text"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Widget.Material3.CompoundButton.RadioButton" android:id="@+id/type"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_outline_thumb_up_24"
                        android:src="@drawable/ic_outline_thumb_up_24"
                        android:id="@+id/good_icon"
                />
                <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Хорошая" android:id="@+id/good" android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_outline_thumb_down_24"
                        android:src="@drawable/ic_outline_thumb_down_24"
                        android:id="@+id/bad_icon"
                        android:layout_marginStart="60dp"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Плохая" android:id="@+id/bad" android:layout_marginStart="8dp"/>
            </RadioGroup>
            <TextView
                    android:text="Тип"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/type_text"
                    app:layout_constraintTop_toBottomOf="@+id/priority"
                    android:layout_marginTop="8dp" style="@style/TextAppearance.Material3.BodySmall"
                    app:layout_constraintStart_toStartOf="@+id/priority_text"/>
            <TextView
                    android:text="Количество выполнений"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/done_count_text"
                    app:layout_constraintTop_toBottomOf="@+id/type" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="56dp" android:layout_marginTop="8dp"
                    style="@style/TextAppearance.Material3.BodySmall"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/decrease"
                    style="@style/Widget.Material3.Button.TextButton"
                    app:layout_constraintTop_toBottomOf="@+id/done_count_text" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="56dp"
                    android:textColor="@color/design_default_color_on_secondary"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/increase"
                    style="@style/Widget.Material3.Button.TextButton"
                    app:layout_constraintTop_toBottomOf="@+id/done_count_text" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"
                    android:textColor="@color/design_default_color_on_secondary"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/done_count"
                    app:layout_constraintStart_toEndOf="@+id/decrease"
                    app:layout_constraintEnd_toStartOf="@+id/increase"
                    app:layout_constraintTop_toTopOf="@+id/increase"
                    app:layout_constraintBottom_toBottomOf="@+id/increase"/>
            <TextView
                    android:text="Цвет"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/color_text"
                    app:layout_constraintTop_toBottomOf="@+id/decrease" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="56dp"
                    style="@style/TextAppearance.Material3.BodySmall" android:layout_marginTop="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/color_text"
                    android:id="@+id/colors" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/description_layout" app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Theme.HabitTracker.TitleEditText"
                    android:hint="@string/description" app:placeholderText="Расскажите о привычке..."
                    app:layout_constraintStart_toEndOf="@+id/freq_icon"
                    app:layout_constraintTop_toBottomOf="@+id/colors" android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/description"
                        android:paddingTop="4dp" android:singleLine="false"/>

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>