<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HabitTracker.TitleEditText" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">none</item>
        <item name="boxStrokeColor">?attr/colorOnSecondary</item>
        <item name="hintTextColor">?attr/editTextColor</item>
    </style>

    <style name="Theme.HabitTracker.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">

    </style>

</resources>