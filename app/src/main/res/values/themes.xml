<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4D4D4D</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HabitTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HabitTracker.InputText" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="hintTextColor">?attr/editTextColor</item>
    </style>

    <style name="Theme.HabitTracker.AppBarOverlay" parent="Widget.Material3.AppBarLayout" />

    <style name="Theme.HabitTracker.PopupOverlay" parent="Theme.Material3.Light" />
</resources>